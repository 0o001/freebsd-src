#!/bin/sh
#
# $FreeBSD: src/etc/rc.d/pwcheck,v 1.5.2.1.2.1 2009/10/25 01:10:29 kensmith Exp $
#

# PROVIDE: pwcheck
# REQUIRE: mountcritremote syslogd
# BEFORE:  DAEMON

. /etc/rc.subr

name="pwcheck"
start_cmd="pwcheck_start"
stop_cmd=":"

pwcheck_start()
{
	#	check the password temp/lock file
	#
	if [ -f /etc/ptmp ]; then
		logger -s -p auth.err \
		    "password file may be incorrect -- /etc/ptmp exists"
	fi
}

load_rc_config $name
run_rc_command "$1"
