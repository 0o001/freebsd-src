#!/bin/sh
#
# $FreeBSD: src/etc/rc.d/hastd,v 1.3.2.2.4.1 2010/12/21 17:09:25 kensmith Exp $
#

# PROVIDE: hastd
# REQUIRE: NETWORKING syslogd
# BEFORE:  DAEMON
# KEYWORD: nojail shutdown

. /etc/rc.subr

name="hastd"
rcvar=`set_rcvar`
pidfile="/var/run/${name}.pid"
command="/sbin/${name}"
hastctl="/sbin/hastctl"
required_files="/etc/hast.conf"
stop_precmd="hastd_stop_precmd"
required_modules="geom_gate:g_gate"

hastd_stop_precmd()
{
	${hastctl} role init all
}

load_rc_config $name
run_rc_command "$1"
