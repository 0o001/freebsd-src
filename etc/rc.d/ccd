#!/bin/sh
#
# $FreeBSD: src/etc/rc.d/ccd,v 1.5.14.1 2008/01/28 07:58:31 dougb Exp $
#

# PROVIDE: disks
# KEYWORD: nojail

. /etc/rc.subr

name="ccd"
start_cmd="ccd_start"
stop_cmd=":"

ccd_start()
{
	if [ -f /etc/ccd.conf ]; then
		echo "Configuring CCD devices."
		ccdconfig -C
	fi
}

load_rc_config $name
run_rc_command "$1"
