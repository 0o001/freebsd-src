#!/bin/sh -
#
# $FreeBSD: src/etc/periodic/monthly/200.accounting,v 1.2.2.1 1999/08/29 14:19:47 peter Exp $
#

W=/var/log/wtmp
if [ -f $W ] ; then
	# Work out last month's name
	M=`date -v-1m +%h`

	mv -f $W $W.$M
	touch $W

	if [ -x /usr/sbin/ac ] ; then
		echo ""
		echo "Doing login accounting:"

		ac -p -w $W.$M | sort -nr +1
	fi

	rm -f $W.$M.gz
	gzip $W.$M
fi
