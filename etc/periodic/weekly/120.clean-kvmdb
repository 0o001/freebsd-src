#!/bin/sh -
#
# $Id: 120.clean-kvmdb,v 1.2.2.1 1999/03/30 08:58:39 joerg Exp $
#

if [ -d /var/db ] ; then
    echo ""
    echo "Cleaning up kernel database files:"

    kernel=`sysctl -n kern.bootfile`
    kernel=kvm_`basename ${kernel}`.db

    find /var/db -name "kvm_*.db" -a ! -name ${kernel} -a \
	-atime +7 -delete
fi
