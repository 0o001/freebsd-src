# $FreeBSD: src/tools/tools/nanobsd/Files/root/change_password,v 1.1.2.1 2005/05/20 09:54:23 phk Exp $

set -ex

passwd root

mount /dev/ad0s3 /mnt
cp /etc/master.passwd /etc/passwd /etc/pwd.db /etc/spwd.db /etc/group /mnt
umount /mnt
