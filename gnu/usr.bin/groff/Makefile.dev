.include "../Makefile.cfg"

FONTDIR?=	/usr/share/groff_font
DEVICEDIR?=	$(FONTDIR)/dev$(DEV)
FONTOWN?=	${BINOWN}
FONTGRP?=	${BINGRP}
FONTMODE?=	${NOBINMODE}

all:	$(DEVFILES)

beforeinstall: ${DEVFILES}
	${INSTALL} -c -o ${FONTOWN} -g ${FONTGRP} -m ${FONTMODE} \
		${.ALLSRC} ${DESTDIR}${DEVICEDIR}

.include <bsd.prog.mk>
